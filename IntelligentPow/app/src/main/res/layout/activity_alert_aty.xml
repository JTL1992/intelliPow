<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#dedede">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:id="@+id/title_alert_setting"
        android:background="@drawable/bg_aboutus_title" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="定时设置"
            android:id="@+id/tx_forget_title"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="@android:color/white" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/btn_back"
            android:background="@drawable/icon_back_left"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/iv_setting"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_select_plus" />
    </RelativeLayout>

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/list_alert"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@drawable/bg_mainlist_line"
        android:dividerHeight="2dp"
        android:headerDividersEnabled="true"
        android:footerDividersEnabled="true"
        android:clickable="true"
        android:listSelector="#00000000"
        android:layout_below="@+id/title_alert_setting" />
</RelativeLayout>