<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.harmazing.intelligentpow.UI.AlertSleepAty">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:id="@+id/title_alert_setting"
        android:background="@drawable/bg_aboutus_title" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="舒睡曲线"
            android:id="@+id/tx_forget_title"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="@android:color/white" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/btn_back"
            android:background="@drawable/icon_back_left"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/iv_setting"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_select_plus" />
    </RelativeLayout>
    <com.harmazing.intelligentpow.view.CrossWebView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/web_sleep"
        android:layout_below="@+id/title_alert_setting" />
</RelativeLayout>
