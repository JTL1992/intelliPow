<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.harmazing.intelligentpow.UI.LoginAty"
    android:background="@drawable/bg_login"
    android:id="@+id/root">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_name_login"
        android:layout_alignLeft="@+id/login"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/icon_user_login"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="false"
            android:background="@drawable/icon_person_login"/>
            <!--android:layout_marginLeft="70dp" />-->

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/user_name"
            android:inputType="text"
            android:hint="请输入账户名"
            android:selectAllOnFocus="true"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/icon_user_login"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textColorHint="#50749b" />
        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="@drawable/line_login"
            android:layout_below="@+id/user_name"
            android:layout_alignLeft="@+id/user_name"
            android:id="@+id/line_user"
            android:layout_marginTop="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_secret_login"
        android:layout_below="@+id/user_name_login"
        android:layout_alignLeft="@+id/user_name_login"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/icon_user_secret"
            android:background="@drawable/icon_password_login"
            android:layout_alignParentLeft="false"/>
            <!--android:layout_marginLeft="70dp"-->

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:inputType="textPassword"
            android:hint="请输入密码"

            android:selectAllOnFocus="true"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/icon_user_secret"
            android:layout_gravity="center"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textColorHint="#50749b" />
        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="@drawable/line_login"
            android:id="@+id/line_password"
            android:layout_below="@+id/password"
            android:layout_alignLeft="@+id/password"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码？"
            android:id="@+id/btn_forget_secret"
            android:gravity="fill"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_alignRight="@+id/password"
            android:background="@android:color/transparent" />

    </RelativeLayout>

    <ImageView
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:id="@+id/logo"
        android:layout_above="@+id/user_name_login"
        android:layout_centerHorizontal="true"
        android:background="@drawable/icon_logo_login"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:text="登  录"
        android:id="@+id/login"
        android:background="@drawable/btn_login"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_below="@+id/user_secret_login"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:id="@+id/zhinengyongdian_logo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/icon_zhinengyongdian_login" />

    <Button
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="更新域名"
        android:id="@+id/btn_change"
        android:layout_margin="10dp"
        android:background="@drawable/btn_round_blue"
        android:gravity="center"
        android:textSize="13sp" />

</RelativeLayout>
